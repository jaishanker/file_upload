<% title "Posts" %>

<p><%= link_to "New Post", new_post_path %></p>
<hr />
<% for post in @posts%>
 <div class="post">
   <h3><%= link_to post.title, post_path(post) %></h3>
   <p>
        <%= post.content %>
        </p>
					<p>
					<%= link_to "Show", post %> |
          <%= link_to "Edit", edit_post_path(post) %> |
          <%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %>
              </p>
              </div>
<% end %>



